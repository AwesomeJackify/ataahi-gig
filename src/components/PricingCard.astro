---
const { title, price, frequency } = Astro.props;
---

<div class="w-96 shadow-2xl">
  <h2 class="text-center uppercase py-4 text-base-100 text-6xl bg-primary">
    {title}
  </h2>
  <div class="flex justify-center text-secondary py-8 bg-slate-100">
    <p class="text-2xl">$</p>
    <p class="text-6xl">{price}</p>
    <p class="self-end text-2xl">per {frequency}</p>
  </div>
</div>
