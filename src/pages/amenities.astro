---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import Icon from "astro-icon";

const amenities = [
  {
    category: "Gym amenities",
    icon: "mdi:arm-flex",
    items: [
      "free WIFI",
      "Kids' corner",
      "Board games",
      "spacious work out areas",
      "Wheelchair Access into building",
      "lots of room for wheelchairs",
      "Close to waterfront",
      "Quiet, private oasis to work out in",
      "Floor to ceiling windows and balcony",
      "Library",
    ],
  },
  {
    category: "Cardio",
    icon: "mdi:run",
    items: [
      "treadmills",
      "ski Erg",
      "Rowing Machine ",
      "Exercise Bikes",
      "Elliptical",
      "Boxing gloves",
      "focus pads",
      "Kick pads",
      "Skipping ropes",
    ],
  },
  {
    category: "Strength",
    icon: "mdi:barbell",
    items: [
      "Squat Rack ",
      "Dual Adjustable Pulley",
      "plate loaded",
      "barbells",
      "dumbbells",
      "kettlebells",
      "medicine balls",
      "Slam balls",
      "Resistance bands",
      "Step benches",
    ],
  },
  {
    category: " Services",
    icon: "mdi:whistle",
    items: [
      "personal training",
      "fitness assessment",
      "Personal Training",
      "Fitness Assessments",
      "Mobility Training",
      "Training for Sports People",
      "Specialising in Training Differently-Abled",
      "Young Kids and Youth Coach",
      "Wellbeing and Women's Coach",
      "Absolute Beginners",
      "People Too Shy to Workout on Their Own",
      "Training for Autoimmune Diseases, Diabetes, Cardiac Disease, Stroke, etc.",
    ],
  },
  {
    category: "Core & Stretches",
    icon: "mdi:arm-flex",
    items: [
      "VKR",
      "Yoga mats",
      "Medicine balls",
      "Benches",
      "Swiss Balls",
      "Foam rollers",
      "trigger/myofacial release balls",
      "Balance Disc/cushions",
      "Balance Wobble board",
      "Bosu ball",
    ],
  },
  {
    category: "Classes",
    icon: "mdi:arm-flex",
    items: [
      "Masterclasses in exercise, nutrition etc",
      "Group fitness classes incl cardio boxing, core etc",
      "Sunday Bootcamps",
      "Self-Defense for children and women",
      "Cook Islands Ura (Hula) Fitness",
      "Plant-based (no dairy) Cooking/prep Classes",
      "Transitioning to Plant-based workshops",
      "Wellbeing workshops (dealing with stress, balancing a busy life etc)",
      "Special programmes for single mums",
    ],
  },
];
---

<Layout title="Amenities">
  <section>
    <div class="flex flex-col items-center gap-6 py-20 max-md:py-10 px-2">
      <div class="flex flex-col gap-24 max-md:gap-12">
        <h1 class="capitalize text-center text-8xl font-bold max-md:text-6xl">
          What we have to offer
        </h1>
        <div
          class="grid grid-cols-3 max-md:grid-cols-2 gap-6 max-lg:grid-cols-3 mx-auto"
        >
          {
            amenities.map((amenity) => (
              <div class="flex flex-col gap-4">
                <div class="flex items-center gap-2">
                  <Icon name={amenity.icon} class="w-8" />
                  <h1 class="capitalize text-2xl">{amenity.category}</h1>
                </div>
                <ul class="mt-2">
                  {amenity.items.map((item) => (
                    <li class="capitalize list-disc ml-4">{item}</li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // import Swiper bundle with all modules installed
  import Swiper from "swiper/bundle";

  // import styles bundle
  import "swiper/css/bundle";

  const swiper = new Swiper(".gallery", {
    breakpoints: {
      640: {
        slidesPerView: 1,
      },
      768: {
        slidesPerView: 2,
      },
      1024: {
        slidesPerView: 3,
      },
    },
    autoplay: {
      delay: 5000,
      disableOnInteraction: true,
      pauseOnMouseEnter: true,
    },
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
  });
</script>
